<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<td colspan="3"></td>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to 'Show', book_path(book.id) %></td>
			<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
			<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

	<!-- form_with部分 -->
<h2>New Books</h2>
<%= form_with model: @book, class: 'new_book', url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <div class="field">
  	<%= f.text_field :title %>
  </div>

  <h4>Body</h4>
  <div class="field">
  	<%= f.text_area :body %>
  </div>

	<div class="actions">
		<%= f.submit 'Create Book' %>
	</div>

<% end %>
